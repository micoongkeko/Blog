<%= form_with model: article do |form| %>
  <div class="mb-3 col-md-6">
    <%= form.label :name, class: "form-label" %><br>
    <%= form.text_field :name, class: "form-control" %>
    <% article.errors.full_messages_for(:name).each do |message| %>
      <div class="form-text form-text-validation"><%= message %></div>
    <% end %>
  </div>

  <div class="mb-3 col-md-8">
    <%= form.label :body, class: "form-label"  %><br>
    <%= form.text_area :body, class: "form-control", rows: "8"  %>
    <% article.errors.full_messages_for(:body).each do |message| %>
      <div class="form-text form-text-validation"><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>
