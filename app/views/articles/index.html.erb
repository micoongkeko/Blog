<div class="text-center">
<h1>Articles</h1>
</div>

<div class="container">
  <div class="card text-center">
    <div class="card-header">
      FEATURED ARTICLE
    </div>
    <div class="card-body">
      <h4 class="card-title"><strong><%= @samplearticle.name %></strong></h4>
      <p class="card-text"><%= @samplearticle.body %></p>
      <div class="btn btn-primary">
        <%= link_to "View article with comments.", @samplearticle, class: "a-primary" %>
      </div>
    </div>
    <div class="card-footer text-muted">
      Created on <%= @samplearticle.created_at.to_s.slice(0, 10) %>
    </div>
  </div>
</div>

<div class="container">
  <%# <div class="row"> %>
  <% @articles.each do |article| %>
  <div class="col-sm-4 d-flex text-center border border-primary">
    <div class="card" style="width: 25rem;">
      <div class="card-body">
        <h4 class="card-title"><strong><%= article.name %></strong></h4>
        <p class="card-text"><%= article.body %></p>
        <%# <a href="#" class="btn btn-primary"></a> %>
        <div class="btn btn-primary">
          <%= link_to "View article with comments.", article, class: "a-primary" %>
        </div>

      </div>
    <%# </div> %>
    </div>
  </div>
  <% end %>
</div>




